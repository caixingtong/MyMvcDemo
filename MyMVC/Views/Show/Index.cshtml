

@{
    ViewBag.Title = "Index";
    Layout = null;
    @Scripts.Render("~/bundles/jquery")
}

@using MyMVC.Models;
@model List<MyMVC.Models.Goods>
<style>
    * {
        margin: 0px;
        padding: 0px;
        color: rgb(51, 51, 51);
    }

    #container {
        border: 1px solid #000000;
        width: 100%;
        height: auto;
        background-color:#ffffff;
    }

    .child-container {
        width: 98%;
        height: 250px;
        border-bottom: 1px solid #000000;
        margin: 5px;
    }

    .div-Image {
        float: left;
        border: 1px solid #000000;
        height: 230px;
        width: 230px;
        margin: 10px;
    }

    .div-content {
        float: left;
        border: 1px solid #000000;
        width: calc(100% - 280px);
        height: 230px;
        margin: 10px;
    }

    .li_oper {
        float: right;
        margin-right: 10%;
        color: #c31313;
        z-index: 5;
        font-size: 50px;
    }

    .sp-title {
        font-size: 33px;
        font-weight: bold;
    }

    .div-child-content {
        border: 1px solid #000000;
    }

    .imgIco {
        height: 30px;
        width: 30px;
    }

    .spIco {
        font-size: 25px;
        font-weight: bold;
    }

    .sp-remark {
        font-size: 25px;
        white-space: normal;
        width: 30px;
        height: 30px;
        text-overflow: ellipsis;
        white-space: normal;
        overflow: hidden;
    }
</style>
<div id="container">
    @if (Model.Count == 0)
    {
        <span style="color:red;font-weight:bold">未找到与您搜索件相符的产品！</span>
    }
    @foreach (var item in Model)
    {
        <div class="child-container;" onclick="javascript:window.location.href='/Show/Detail/?Id='+@item.Id">
            <div class="div-Image" style="background-image:url(@item.ImageUrl);background-size:cover;">
            </div>
            <div class="div-content">
                <div>
                    <div>
                        <span class="sp-title">@Html.DisplayFor(modelItem => item.Name)</span>
                        <span class="li_oper">...</span>
                    </div>
                    <br />
                    <div style=" overflow: hidden;">
                        <img class="imgIco" src="~/Images/product04.png" /><span class="spIco">@Html.DisplayFor(modelItem => item.CityName)</span>
                        <img class="imgIco" src="~/Images/ICO/spot04.png" /><span class="spIco">@Html.DisplayFor(modelItem => item.Money)</span>
                        <img class="imgIco" src="~/Images/ICO/spot05.png" /><span class="spIco">@Html.DisplayFor(modelItem => item.Areas)m<sup style="font-size:20px">2</sup></span>
                      <br />
                        <span class="sp-remark">  注:</span>
                        <span class="sp-remark">
                            @Html.DisplayFor(modelItem => item.Remark).ToString().Substring(0, 70)...;
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



